      // MA 線的顯示控制
      $('.ma-toggle').on('change', function () {
        const index = $(this).data('series-index');
        const series = chart.series[index + 1]; // +1 因為第一個series是K線
        if (series) {
          if (this.checked) {
            series.show();
          } else {
            series.hide();
          }
        }
      });

      // 設定按鈕點擊事件
